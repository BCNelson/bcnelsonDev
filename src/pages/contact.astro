---
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactCard from "../components/astro/ContactCard.astro";
import { contacts } from "../data/contacts";
---

<BaseLayout title="Contact - Bradley Nelson" description="Get in touch with Bradley Nelson">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold text-white mb-8 text-center">Get in Touch</h1>
    <div class="flex flex-wrap justify-center justify-items-center content-center gap-8">
      {contacts.map((contact) => (
        <ContactCard contact={contact} />
      ))}
    </div>
  </div>
</BaseLayout>
