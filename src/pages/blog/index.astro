---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout title="Blog - Bradley Nelson" description="Blog posts by Bradley Nelson">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold text-white mb-8">Blog</h1>
    {posts.length === 0 ? (
      <p class="text-gray-400">No blog posts yet. Check back soon!</p>
    ) : (
      <ul class="space-y-6">
        {posts.map((post) => (
          <li>
            <a
              href={`/blog/${post.slug}`}
              class="block p-6 bg-gray-800 rounded-lg shadow hover:shadow-lg hover:bg-gray-700 transition"
            >
              <h2 class="text-xl font-semibold text-white">{post.data.title}</h2>
              <time class="text-gray-500 text-sm" datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "long",
                  day: "numeric",
                })}
              </time>
              <p class="mt-2 text-gray-400">{post.data.description}</p>
            </a>
          </li>
        ))}
      </ul>
    )}
  </div>
</BaseLayout>
