---
import { ViewTransitions } from "astro:transitions";
import BaseHead from "../components/astro/BaseHead.astro";
import Navbar from "../components/astro/Navbar.astro";
import ContactCTA from "../components/astro/ContactCTA.astro";
import Footer from "../components/astro/Footer.astro";
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  showCTA?: boolean;
}

const {
  title,
  description = "Personal website for Bradley Nelson, a backend software engineer.",
  showCTA = true,
} = Astro.props;

// Get Turnstile site key from Cloudflare Worker environment
const turnstileSiteKey = Astro.locals.runtime?.env?.TURNSTILE_SITE_KEY ?? "";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <ViewTransitions />
  </head>
  <body class="min-h-screen flex flex-col bg-surface-primary text-slate-100">
    <Navbar />
    <main class="flex-1 pt-16">
      <slot />
    </main>
    {showCTA && <ContactCTA turnstileSiteKey={turnstileSiteKey} />}
    <Footer />
  </body>
</html>
