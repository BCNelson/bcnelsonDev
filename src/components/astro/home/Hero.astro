---
import Button from "../ui/Button.astro";
import TerminalWindow from "./TerminalWindow.astro";
import Terminal from "../../vue/terminal/Terminal.vue";
import TypeWriter from "../../vue/TypeWriter.vue";

interface Props {
  headline: string;
  gradientWord: string;
  subtext: string;
  githubUrl?: string;
}

const {
  headline = "Building Resilient",
  gradientWord = "Infrastructure",
  subtext = "Full-stack engineer focused on backend systems, cloud infrastructure, and the hidden logic that keeps the digital world running.",
  githubUrl = "https://github.com/bcnelson",
} = Astro.props;
---

<section class="min-h-[calc(100vh-4rem)] flex items-center bg-gradient-mesh">
  <div class="container mx-auto px-4 lg:px-8 py-12 lg:py-20">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Left side - Content -->
      <div class="space-y-6">
        <!-- Typing label -->
        <div class="text-accent-cyan">
          <TypeWriter
            client:load
            text="INITIALIZING SYSTEM..."
            speed={60}
            delay={300}
          />
        </div>

        <!-- Headline -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
          {headline}
          <span class="text-gradient-purple block">{gradientWord}</span>
        </h1>

        <!-- Subtext -->
        <p class="text-lg text-slate-400 max-w-xl">
          {subtext}
        </p>

        <!-- CTAs -->
        <div class="flex flex-wrap gap-4 pt-4">
          <Button href="#projects" variant="primary">
            View Projects
          </Button>
          <Button href={githubUrl} variant="outline">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path
                fill-rule="evenodd"
                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                clip-rule="evenodd"></path>
            </svg>
            GitHub
          </Button>
        </div>
      </div>

      <!-- Right side - Terminal -->
      <div class="lg:pl-8 min-w-0">
        <TerminalWindow class="glow-multi max-w-full">
          <Terminal client:only="vue" />
        </TerminalWindow>
      </div>
    </div>
  </div>
</section>
