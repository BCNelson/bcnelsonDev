---
interface Props {
  status?: "online" | "offline";
  text?: string;
  class?: string;
}

const { status = "online", text = "SYSTEM UP", class: className = "" } = Astro.props;

const dotColor = status === "online" ? "bg-green-500" : "bg-red-500";
---

<div
  class={`inline-flex items-center gap-2 px-3 py-1.5 rounded-full border border-slate-700 bg-surface-secondary/50 ${className}`}
>
  <span class="relative flex h-2 w-2">
    <span
      class={`absolute inline-flex h-full w-full rounded-full ${dotColor} opacity-75 animate-ping`}
    ></span>
    <span class={`relative inline-flex rounded-full h-2 w-2 ${dotColor}`}
    ></span>
  </span>
  <span class="font-mono text-xs text-green-400 tracking-wider">{text}</span>
</div>
