---
interface Props {
  name: string;
  rank: number;
  max?: number;
}

const { name, rank, max = 100 } = Astro.props;
const percentage = (rank / max) * 100;
const label = max === 100 ? `${Math.round(percentage)}%` : `${rank}/${max}`;
---

<div class="p-1 m-2 bg-black bg-opacity-5 rounded-xl">
  <div class="flex items-center justify-between">
    <span class="text-lg font-medium pr-3">{name}</span>
    <span class="text-md font-medium text-gray-500 dark:text-gray-400">{label}</span>
  </div>
  <div class="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700 mb-1">
    <div class="bg-blue-600 h-2.5 rounded-full" style={`width: ${percentage}%`}></div>
  </div>
</div>
